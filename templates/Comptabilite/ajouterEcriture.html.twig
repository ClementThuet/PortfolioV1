{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{parent()}}
{%endblock%}

{% block body %}
    {{parent()}}
    <h1 class="titresH1"> Ajouter une nouvelle écriture comptable</h1>
    {{ form_start(form) }}
    <div class='container-fluid formulaire'  >
        <div class='row'>
            {# Colonne de gauche #}
            <div class='col-md-10 '>
                <div class="form-group">
                    {{ form_label(form.Nom,'Nom :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.Nom) }}
                    {{ form_widget(form.Nom, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.date,'Date :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.date) }}
                    {{ form_widget(form.date, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.montant,'Montant :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.montant) }}
                    {{ form_widget(form.montant, { 'attr': {'class': 'form-control'} } )}}
                </div>
                <div class="form-group">
                    {{ form_label(form.description,'Description :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.description) }}
                    {{ form_widget(form.description, { 'attr': {'class': 'form-control'} } )}}  
                </div>
                <div class="form-group">
                    {{ form_label(form.sensflux,'Credit ? ', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.sensflux) }}
                    {{ form_widget(form.sensflux, { 'attr': {'class': 'form-control'} } )}}  
                </div>
                <div class="form-group">
                    {{ form_label(form.imposable,'Imposable :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.imposable) }}
                    {{ form_widget(form.imposable, { 'attr': {'class': 'form-control'} } )}}  
                </div>
                <div class="form-group">
                    {{ form_label(form.partageable,'Partageable :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.partageable) }}
                    {{ form_widget(form.partageable, { 'attr': {'class': 'form-control'} } )}}  
                </div>
                <div class="form-group">
                    {{ form_label(form.categorie,'Catégorie :', {'label_attr': {'class': 'labelFormTxt'}}) }}
                    {{ form_errors(form.categorie) }}
                    {{ form_widget(form.categorie, { 'attr': {'class': 'form-control'} } )}}
                </div>
                 <button class="btn btn-primary" type="submit" id="patient_Enregistrer" name="patient[Enregistrer]">Enregistrer</button>
            </div>

           
    {{ form_row(form._token) }}
    {{ form_end(form, {'render_rest': false}) }}                      
        
{%endblock%}
